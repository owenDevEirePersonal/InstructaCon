<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/party_app_final_background">


    <Button
        android:id="@+id/manager2Button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:text="Manager"
        android:textColor="@color/cast_expanded_controller_text_color"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintHorizontal_bias="1.0"
        map:layout_constraintLeft_toRightOf="@+id/driverButton"
        map:layout_constraintRight_toRightOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.523"/>

    <Button
        android:id="@+id/driver2Button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:text="Station"
        android:textColor="@color/cast_expanded_controller_text_color"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintLeft_toLeftOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.0"/>

    <Button
        android:id="@+id/driverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_button"
        android:text="Old Station"
        android:textColor="@android:color/white"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintLeft_toLeftOf="parent"
        map:layout_constraintRight_toRightOf="parent"
        tools:text="Old Station"/>

    <Button
        android:id="@+id/managerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:text="Old Manager"
        android:textColor="@android:color/white"
        map:layout_constraintLeft_toLeftOf="parent"
        map:layout_constraintRight_toRightOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        tools:text="Old Manager"/>

    <Button
        android:id="@+id/troubleTicketButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:text="Trouble Ticketing Demo"
        android:textColor="@android:color/white"
        map:layout_constraintBottom_toTopOf="@+id/driverButton"
        map:layout_constraintTop_toBottomOf="@+id/managerButton"
        tools:text="Trouble Ticketing Demo"
        map:layout_constraintRight_toLeftOf="@+id/manager2Button"
        android:layout_marginRight="8dp"
        map:layout_constraintLeft_toRightOf="@+id/driver2Button"/>
</android.support.constraint.ConstraintLayout>